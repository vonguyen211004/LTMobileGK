<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".activity.Day1_LinearLayout">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/cl_default"
        android:title="Day2_LinearLayout"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <TextView
        android:id="@+id/tv_display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:text="123456789"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:gravity="end|center_vertical"
        android:padding="16dp" />

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView android:text="C" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#000000" android:textSize="30sp"
            android:background="#DDDDDD" android:padding="8dp"
            android:layout_marginRight="1dp" android:layout_marginBottom="1dp" />

        <TextView android:text="+/-" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#000000" android:textSize="30sp"
            android:background="#DDDDDD" android:padding="8dp"
            android:layout_marginRight="1dp" android:layout_marginBottom="1dp" />

        <TextView android:text="%" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#000000" android:textSize="30sp"
            android:background="#DDDDDD" android:padding="8dp"
            android:layout_marginRight="1dp" android:layout_marginBottom="1dp" />

        <TextView android:text="/" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#FFFFFF" android:textSize="30sp"
            android:background="#FFA500" android:padding="8dp"
            android:layout_marginBottom="1dp" />
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView android:text="7" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#000000" android:textSize="30sp"
            android:background="#EEEEEE" android:padding="8dp"
            android:layout_marginRight="1dp" android:layout_marginBottom="1dp" />

        <TextView android:text="8" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#000000" android:textSize="30sp"
            android:background="#EEEEEE" android:padding="8dp"
            android:layout_marginRight="1dp" android:layout_marginBottom="1dp" />

        <TextView android:text="9" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#000000" android:textSize="30sp"
            android:background="#EEEEEE" android:padding="8dp"
            android:layout_marginRight="1dp" android:layout_marginBottom="1dp" />

        <TextView android:text="x" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#FFFFFF" android:textSize="30sp"
            android:background="#FFA500" android:padding="8dp"
            android:layout_marginBottom="1dp" />
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView android:text="4" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#000000" android:textSize="30sp"
            android:background="#EEEEEE" android:padding="8dp"
            android:layout_marginRight="1dp" android:layout_marginBottom="1dp" />

        <TextView android:text="5" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#000000" android:textSize="30sp"
            android:background="#EEEEEE" android:padding="8dp"
            android:layout_marginRight="1dp" android:layout_marginBottom="1dp" />

        <TextView android:text="6" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#000000" android:textSize="30sp"
            android:background="#EEEEEE" android:padding="8dp"
            android:layout_marginRight="1dp" android:layout_marginBottom="1dp" />

        <TextView android:text="-" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#FFFFFF" android:textSize="30sp"
            android:background="#FFA500" android:padding="8dp"
            android:layout_marginBottom="1dp" />
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView android:text="1" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#000000" android:textSize="30sp"
            android:background="#EEEEEE" android:padding="8dp"
            android:layout_marginRight="1dp" android:layout_marginBottom="1dp" />

        <TextView android:text="2" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#000000" android:textSize="30sp"
            android:background="#EEEEEE" android:padding="8dp"
            android:layout_marginRight="1dp" android:layout_marginBottom="1dp" />

        <TextView android:text="3" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#000000" android:textSize="30sp"
            android:background="#EEEEEE" android:padding="8dp"
            android:layout_marginRight="1dp" android:layout_marginBottom="1dp" />

        <TextView android:text="+" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#FFFFFF" android:textSize="30sp"
            android:background="#FFA500" android:padding="8dp"
            android:layout_marginBottom="1dp" />
    </LinearLayout>

    <!-- Row 5 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView android:text="0" style="@null"
            android:layout_weight="2" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#000000" android:textSize="30sp"
            android:background="#EEEEEE" android:padding="8dp"
            android:layout_marginRight="1dp" android:layout_marginBottom="1dp" />

        <TextView android:text="." style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#000000" android:textSize="30sp"
            android:background="#EEEEEE" android:padding="8dp"
            android:layout_marginRight="1dp" android:layout_marginBottom="1dp" />

        <TextView android:text="=" style="@null"
            android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent"
            android:gravity="center" android:textColor="#FFFFFF" android:textSize="30sp"
            android:background="#FFA500" android:padding="8dp"
            android:layout_marginBottom="1dp" />
    </LinearLayout>

</LinearLayout>
